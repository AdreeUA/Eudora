.navigation
	background-color rgba(0,0,0,0.45)
	font-size 0
	display flex
	align-items center
	min-height 249px
	justify-content center

	&__item
		display inline-block
		font-size 18px
		margin-left 1px

		&:hover
			background rgba(0,0,0,.3)
			border-radius 10px
			text-decoration underline

	&__link
		display block
		text-decoration none
		padding 35px
		color bg-colors
		font-weight 700

	&__logo
		margin-bottom 15px
		padding-x(30px)
