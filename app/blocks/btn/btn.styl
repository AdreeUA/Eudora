.btn
	width 204px
	overflow hidden
	background-color transparent
	padding 21px 10px
	border 2px solid btn-border
	font-size 20px
	font-weight 400
	letter-spacing -2px
	color btn-color
	text-transform uppercase

	&__link
		display block
		text-decoration none
		color inherit

	&--for-bg
		color bg-colors

	&:hover
		opacity 0.5